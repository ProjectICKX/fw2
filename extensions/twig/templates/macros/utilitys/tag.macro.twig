{##
 # 属性を構築します。
 #
 # @param	array	attribute_list				属性リスト
 # @param	array	exclusion_attribute_list	無視する属性リスト
 # @return	string	属性
 #}
{% macro attr(attribute_list, exclusion_attribute_list) %}{% filter replace({"\n" : ''})|raw %}
{% for name, value in attribute_list %}
{% if name not in exclusion_attribute_list and value is not same as ('') %}
{% if name == 'class' and value is iterable %}
{% set value = ' ' ~ value|join(' ') %}
{% endif %}
 {{ name }}="{{ value }}"
{% endif %}
{% endfor %}
{% endfilter %}{% endmacro %}

{##
 # NAME属性を構築します。
 #
 # @param	string	name	構築するNAME属性。
 # @return	string	属性
 #}
{% macro name(name) %}{% import _self as _tags %}{{ _tags.attr({'name' : _tags.convert_form_name(name)}) }}{% endmacro %}

{##
 # NAMEをフォームNAME用に変換します。
 #
 # @param	string	name	構築するNAME属性。
 # @return	string	属性
 #}
{% macro convert_form_name(name) %}
{% filter del_lf|raw %}
{% import _self as _tags %}
{% if name is not null %}
{% set name = adjust_array(name) %}
{% if is_post_form() %}{% set name = array_unshift(name, 'data') %}{% endif %}
{%	for part in name[0:1] %}
{{ part }}
{%	endfor %}{% set before_loop_last = loop.last %}
{%	for part in name[1:before_loop_last] %}
{{ _tags.bracket(part) }}
{%	endfor %}
{% endif %}
{% endfilter %}
{% endmacro %}

{##
 # NAME属性に付与するブラケットをセットします。
 #
 # @param	mixed	name	NAME属性
 # @return	string	ブラケット
 #}
{% macro bracket(name) %}
{% filter del_lf|raw %}
{% if name|str_search('[') %}
[]
{% else %}
[{{ name }}]
{% endif %}
{% endfilter %}
{% endmacro %}

{##
 # VALUE属性を構築し、表示します。
 #
 # @param	mixed	name		name属性
 # @param	object	filter_list	表示時に使用するTwig Filterのリスト
 #}
{% macro value(value, filter_list) %}{% import _self as tags %}{{ tags.attr({'value' : filter(value, filter_list)}) }}{% endmacro %}

{##
 # アンカーエレメントの簡易的な切り替え制御を行います。
 #
 # @param	mixed	name		name属性
 # @return	string	属性
 #}
{% macro anchor(href, label, attribute_list, mode, substitute = null, substitute_attribute_list= []) %}
{% import _self as _tags %}{% if mode %}<a href="{{ href }}"{{ _tags.attr(attribute_list, ['href']) }}>{{ label }}</a>{% else %}{% if substitute %}<{{ substitute }}{{ _tags.attr(substitute_attribute_list) }}>{{ label }}</{{ substitute }}>{% else %}{{ label }}{% endif %}{% endif %}
{% endmacro %}
